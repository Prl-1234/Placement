<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_width="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/backAdapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_backarrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text=""
                    android:id="@+id/name"
                    android:textColor="@color/black"
                    android:textSize="25sp"

                    />

                <Button
                    android:id="@+id/accept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="1dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:scaleType="center"
                    android:background="@drawable/roundedbtn_green"
                    android:text="Select"/>
                <Button
                    android:id="@+id/reject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="1dp"
                    android:layout_toLeftOf="@+id/accept"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:scaleType="center"
                    android:background="@drawable/roundedbtn_red"
                    android:text="Reject"/>
                <TextView
                    android:id="@+id/accepted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_toLeftOf="@+id/accept"
                    android:textSize="18sp"
                    android:textColor="@color/green"

                    android:scaleType="center"
                    android:text="Selected"/>
                <TextView
                    android:id="@+id/rejected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/accept"
                    android:textSize="18sp"
                    android:textColor="@color/red"
                    android:scaleType="center"
                    android:text="Rejected"/>
            </RelativeLayout>
        </com.google.android.material.appbar.AppBarLayout>
<!--        <include layout="@layout/snippet_top_new_job"/>-->
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:id="@+id/student_name"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/student_name"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:id="@+id/student_name_detail"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/student_name_detail"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/student_cpi"
            android:textColor="@color/black"
            android:text="Cpi"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_below="@+id/student_cpi"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/student_cpi_details"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/student_cpi_details"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/student_branch"
            android:textColor="@color/black"
            android:text="Branch"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_below="@+id/student_branch"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/student_branch_details"
            android:layout_marginBottom="10dp"
            />


    </RelativeLayout>






</RelativeLayout>